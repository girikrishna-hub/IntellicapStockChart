modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Stock Chart App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GuruFocus Stock Analysis App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Main Landing Page"

[[workflows.workflow]]
name = "Streamlit Stock Chart App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "install_dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add yfinance plotly"

[[workflows.workflow]]
name = "GuruFocus Stock Analysis App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_gurufocus.py --server.port 5001"
waitForPort = 5001

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Main Landing Page"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run index.py --server.port 3000"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
